{
  "name": "cogni-kit",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "bun run sync-env && turbo dev",
    "build": "bun run sync-env && turbo build",
    "type-check": "turbo type-check",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "sync-env": "bun run scripts/sync-env.ts",
    "check-env": "bun run scripts/check-env.ts",
    "check-i18n": "bun run scripts/check-i18n.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "turbo": "^2.7.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "packageManager": "bun@1.3.6"
}