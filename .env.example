# =================================
# 共享配置 (所有应用都可访问)
# =================================
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# =================================
# 数据库配置 (Server + Docker)
# =================================
DATABASE_URL=postgresql://cognikit:cognikit_dev_password@127.0.0.1:5432/cognikit?schema=public
POSTGRES_USER=cognikit
POSTGRES_PASSWORD=cognikit_dev_password
POSTGRES_DB=cognikit

# =================================
# Redis 配置 (Server + Docker + Python)
# =================================
REDIS_URL=redis://localhost:6379

# =================================
# 后端专用配置 (SERVER_* 前缀)
# =================================
SERVER_PORT=3001
SERVER_JWT_SECRET=dev-secret-key-please-change-in-production-minimum-32-characters
SERVER_JWT_EXPIRES_IN=7d
SERVER_RESEND_API_KEY=your-resend-api-key
SERVER_EMAIL_FROM=noreply@yourdomain.com

# Financial Data 服务 (用于投资标的同步)
SERVER_FINANCIAL_DATA_URL=http://localhost:8000

# OAuth (Server)
SERVER_GITHUB_CLIENT_ID=
SERVER_GITHUB_CLIENT_SECRET=
SERVER_GOOGLE_CLIENT_ID=
SERVER_GOOGLE_CLIENT_SECRET=

# =================================
# 前端专用配置 (WEB_* 前缀)
# =================================
WEB_PORT=3000
WEB_API_URL=http://localhost:3001
WEB_ENABLE_ANALYTICS=false

# =================================
# Python 服务配置 (PYTHON_* 前缀)
# =================================
PYTHON_PORT=8000
PYTHON_LOG_LEVEL=INFO

# =================================
# Docker 专用配置
# =================================
DOCKER_POSTGRES_PORT=5432
DOCKER_REDIS_PORT=6379
# Docker 数据卷根目录 (留空使用默认位置，或指定绝对路径如 /data/docker-volumes)
DOCKER_VOLUMES_ROOT=
